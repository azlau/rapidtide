#!/bin/csh -f

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_gauss \
        --delaymapping \
        --sigmalimit 25.0 \
        --ampthresh 0.3 \
        --nprocs -1 \
        --pickleft \
        --pickleftthresh 0.3 \
        --peakfittype gauss \
	--spatialfilt 2 

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_mi \
	--passes 1 \
	--oversampfac 6 \
	--despecklepasses 0 \
	--searchrange -15 45 \
	--sigmalimit 25.0 \
	--nprocs -1 \
	--nofitfilt \
	--spatialfilt 2 \
	--similaritymetric MI \

