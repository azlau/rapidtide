#!/bin/csh -f

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_gauss \
	--delaymapping \
	--sigmalimit 25.0 \
	--ampthresh 0.3 \
	--nprocs -1 \
	--pickleft \
	--pickleftthresh 0.3 \
	--peakfittype fastquad \
	--spatialfilt 2 

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_mi_quad \
	--passes 1 \
	--oversampfac 6 \
	--despecklepasses 0 \
	--searchrange -15 15 \
	--sigmalimit 25.0 \
	--nprocs -1 \
	--peakfittype quad \
	--nofitfilt \
	--spatialfilt 2 \
	--similaritymetric mutualinfo 

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_mi_fastquad \
	--passes 1 \
	--oversampfac 6 \
	--despecklepasses 0 \
	--searchrange -15 15 \
	--sigmalimit 25.0 \
	--nprocs -1 \
	--peakfittype fastquad \
	--nofitfilt \
	--spatialfilt 2 \
	--similaritymetric mutualinfo 

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_mi_gauss \
	--passes 1 \
	--oversampfac 6 \
	--despecklepasses 0 \
	--searchrange -15 15 \
	--sigmalimit 25.0 \
	--nprocs -1 \
	--peakfittype gauss \
	--nofitfilt \
	--spatialfilt 2 \
	--similaritymetric mutualinfo 

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_mi_fastgauss \
	--passes 1 \
	--oversampfac 6 \
	--despecklepasses 0 \
	--searchrange -15 15 \
	--sigmalimit 25.0 \
	--nprocs -1 \
	--peakfittype fastgauss \
	--nofitfilt \
	--spatialfilt 2 \
	--similaritymetric mutualinfo 

rapidtide \
	fmri.nii.gz \
	../dst/dgsr_mi_None \
	--passes 3 \
	--oversampfac 6 \
	--despecklepasses 0 \
	--searchrange -15 15 \
	--sigmalimit 25.0 \
	--nprocs -1 \
	--peakfittype None \
	--nofitfilt \
        --ampthresh 0.1 \
	--spatialfilt 2 \
        --saveintermediatemaps \
	--similaritymetric mutualinfo 

